	<header>
<center><p style="font-size:24px; display:table-cell; vertical-align:middle; height:50px;">나랑 교환할래?</p></center>
	</header>

<div style="width:100%; height:10vh;"></div>

<div class="row">
  <div class="col-xs-2 col-md-2"></div>
  <div class="col-xs-8 col-md-8">
    <div class="circle">
      <img src="/assets/me.png" class="img-circle" style="margin:auto; width:30vh; height:30vh;">
    </div>
  </div>
  <div class="col-xs-2 col-md-2"></div>
</div>

<div style="width:100%; height:8vh;"></div>

<div class="container-fluid input">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%#= f.label :email %>
    <%= f.text_field :email, autofocus: true, class: 'info yellow',placeholder: "  ID" %>
  </div>

  <div class="field">
    <br/>
    <%#= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class:'info yellow',placeholder: "  Password" %>
  </div>
  <%# if devise_mapping.rememberable? -%>
    <!--div class="field">
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    </div-->
  <%# end -%>
</div>

<div style="width:100%; height:6vh;"></div>

<div class="row" style="margin:auto; width:80vw; text-align:center; ">
  <div class="col-xs-4 col-sm-4 col-md-4" style="padding-right:10px;">
    <div class="infolink1" style="padding-top:4%;">
    <p onclick="location.href='/users/sign_up'">회원가입</p>
    </div>
  </div>
  <div class="col-xs-4 col-sm-4 col-md-4" style="padding:0 !important;">
    <div class="infolink2">
    <p style="padding-top:3%;">ID/PW 찾기</p>
    </div>
  </div>
  <div class="actions col-xs-4 col-sm-4 col-md-4" style="padding-left:10px;" >
    <div class="infolink1">
    <%= f.submit "로그인", style:"background-color:transparent; border:0px;" %>
    </div>
  </div>
</div>
<% end %>


<%#= render "devise/shared/links" %>

